<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lessonAddress"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="3dip"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_wait" />
    <TextView
        android:id="@+id/lessonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/image"
        android:text="课程：正在查询..." />
    
    <TextView
        android:id="@+id/lessonAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignLeft="@+id/lessonName"
        android:layout_below="@id/lessonName"
        android:layout_marginTop="6dip"
        android:text="地点：正在查询.................." />
    
</RelativeLayout>